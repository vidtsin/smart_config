                                    <!--</div>-->
                                <!--</div>-->
                            <!--</section>-->
                        </html>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hhplugins_dynamic_action_menu_detail_action" model="ir.actions.act_window">
